<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/coupletones_icon"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:id="@+id/title"
        android:text="CoupleTones"
        android:textColor="#9d4747" />

    <EditText
        android:id="@+id/txt_user_account"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:hint="@string/user_name"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="#9d4747" />

    <Button
        android:id="@+id/btn_select_account"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/select"
        android:background="#ccb65d5d"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:shadowColor="#ffffff"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ccb65d5d"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:shadowColor="#ffffff"
        android:text="@string/btn_register" />

    <TextView
        android:id="@+id/txt_reg_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:ellipsize="middle"
        android:maxLines="1"
        android:text="RegID" />

    <!--<EditText
        android:id="@+id/txt_message"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:hint="@string/txt_message_hint" />

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start"
        android:text="@string/btn_message" />-->

</LinearLayout>